{
    "compilerOptions": {
        "outDir": "./dist",
        "target": "es6",
        "module": "commonjs",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "strict": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "lib": ["es2015", "dom"]
    },
    "include": [
        "src/**/*"
    ]
}
